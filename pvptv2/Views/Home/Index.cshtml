@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .carousel-inner {
            max-width: 1200px;
            max-height: 400px;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
        }

        .container-fluid {
            font-family: 'Comic Sans MS', Times, serif;
            font-size: 17px;
        }
    </style>
</head>
<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="https://i.imgur.com/RuwowQv.jpg" alt="Vara">
            </div>

            <div class="item">
                <img src="https://i.imgur.com/Ek5H8HZ.jpg" width="1600" alt="Toamna">
            </div>

            <div class="item">
                <img src="https://i.imgur.com/d8yFh21.jpg" alt="Iarna">
            </div>

            <div class="item">
                <img src="https://i.imgur.com/veEzsYp.jpg" alt="Primavara">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <section id="block-eyp-theme-front-nav-section" class="block block-eyp-theme clearfix">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-4" style="background-color:lavender; padding:5px 5px; margin:10px auto; text-align:center;">
                    @Html.ActionLink(" ", "Events", "Home", new { @class = "glyphicon glyphicon-calendar" })
                    @*@Html.ActionLink("Evenimente", "Events", "Home")*@
                </div>
                <div class="col-sm-4" style="background-color:lavenderblush; padding:5px 5px; margin:10px auto; text-align:center;">
                    @Html.ActionLink(" ", "News", "Home", new { @class = "glyphicon glyphicon-bell" })
                    @*@Html.ActionLink("Noutati", "News", "Home")*@
                </div>
                <div class="col-sm-4" style="background-color:lavender; padding:5px 5px; margin:10px auto; text-align:center;">
                    @*@Html.ActionLink("Parerea", "Index", "User")*@
                    @Html.ActionLink(" ", "Index", "Tourists", new { @class = "glyphicon glyphicon-envelope" })
                    @*@Html.ActionLink("Parerea ta!", "Opinion", "Home")*@
                </div>
            </div>
        </div>
    </section>
</body>
</html>