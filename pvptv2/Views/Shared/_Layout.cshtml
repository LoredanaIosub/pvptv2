<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        li:hover {
            background-color: lavender;
            border-radius: 5%;
        }

        li {
            font-family: 'Comic Sans MS', Times, serif;
            font-size: 17px;
        }

        .dropdown-toggle .dropdown-menu .dropdown:hover {
            background-color: #E6E6FA;
            border-radius: 5%;
            padding: 5px 5px;
            margin: 10px 10px;
        }

        a.dropdown-toggle:hover {
            background-color: lavender;
            border-radius: 5%;
        }
    </style>

</head>
<body>
    <div style="background-color:white;" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div style="margin:0px 150px 0px 0px;" class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="https://i.imgur.com/dQpMLc4.jpg" alt="W3Schools.com"> <!--logo Brasov-->
                @*@Html.ActionLink("Welcome to Brasov", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("Acasă", "Index", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("Despre", "About", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("Călătorie", "Travel", "Home")</li>

                    <li class="dropdown" style="margin-top:10px; padding:5px 5px;">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Activități<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Relaxare", "Relax", "Home")</li>
                            <li>@Html.ActionLink("Restaurante", "Eat", "Home")</li>
                            <li>@Html.ActionLink("Play", "Play", "Home")</li>
                        </ul>
                    </li>

                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>


            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:left;">&copy; @DateTime.Now.Year - Platformă versatilă pentru turiști</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @section Scripts {
        @Scripts.Render("~/bundles/signalr")
        @Scripts.Render("/signalr/hubs")
    }
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>

    <script src="~/signalr/hubs" type="text/javascript"></script>
    <script type="text/javascript">

        $(function () {

            var notif = $.connection.notifHub;

            notif.Client.displaypvptv2 = function () {
                getData();
            };

            $.connection.hub.start();
            getData();
        });

        function getData() {
            debugger;
            var $tbl = $("tblInfo");
            $.ajax({
                url: $("#Get").val(),
                type: 'GET',
                datatype: 'json',
                success: function (data) {
                    $tbl.empty();

                    $.each(data.listNotif, function (i, model) {
                        $tbl.append
                        {
                            '<tr>' +
                                '<td>' + model.Data + '</td>' +
                                '<td>' + model.Ora + '</td>' +
                                '<td>' + model.Eveniment + '</td>' +
                                '<td>' + model.Titlu + '</td>' +
                                '<td>' + model.Locație + '</td>' +
                                '<tr>'
                        };
                    });
                }

            });
        }
    </script>
</body>
</html>
